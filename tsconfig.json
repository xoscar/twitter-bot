{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": ".build",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "cdk.out", ".build"],
  "include": ["src/**/*.ts"]
}
